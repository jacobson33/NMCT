
@{
    ViewBag.Title = "User Roles";
    string userId = ViewBag.UserId;
}

<h2>User Management | Roles</h2>
<h3>User: @ViewBag.UserName</h3>

<p>
    @Html.ActionLink("Add a Role", "AddRoleToUser", new { userId = ViewBag.UserId })
</p>

<table class="table">
    <tr>
        <th>User Role</th>
        <th></th>
    </tr>

    @foreach (var role in ViewBag.RolesForUser)
    {
        <tr>
            <td>@role</td>
            <td>@Html.ActionLink("Delete","DeleteRoleForUser", new { userId = userId, roleName = role })</td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Return to Users", "UserManagement")
</p>